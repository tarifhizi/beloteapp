<h1>Listing players</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Rank</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @players.each do |player| %>
          <tr>
            <td><%= player.name %></td>
            <td><%= player.rank %></td>
            <td><%= link_to 'Show', player, class:'btn btn-xs btn-info' %></td>
            <td><%= link_to 'Edit', edit_player_path(player), class:'btn btn-xs btn-success' %></td>
            <td><%= link_to 'Destroy', player, method: :delete, class:'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

